---
import Layout from "../../layouts/Layout.astro";
import JavascriptIcon from "../../icons/Javascript.astro";

console.log(Astro.props);
---

<Layout title="Read my thoughts">
  <main class="space-y-3 md:space-y-6">
    <section
      class="max-w-[1120px] mx-auto rounded-[24px] p-6 sm:p-12 bg-white border border-gray-300 shadow"
    >
      <div class="flex flex-row gap-4">
        <JavascriptIcon class="size-20" transition:name="img-article-2" />
        <h1 class="text-4xl font-bold">
          Here you can see the articles that i have written
        </h1>
      </div>
    </section>
  </main>
</Layout>
