---
// Importa la imagen
import { Image } from "astro:assets";
import myImage from "../assets/logo-face.webp"; // La imagen es 1600x900
import Menu from "../icons/Menu.astro";
---

<header
  class="sticky top-5 left-5 right-5 z-10 flex justify-between p-3 max-w-[1120px] mx-auto border rounded-full shadow backdrop-blur-sm bg-white/80 border-gray-300 overflow-hidden"
>
  <a href="/">
    <Image
      class="size-12 md:size-14 p-1 rounded-full object-cover bg-indigo-800 items-center hover:scale-110 hover:rotate-12 ease-in-out duration-300"
      src={myImage}
      alt="portfolio logo"
      loading="eager"
    />
  </a>
  <nav
    class="hidden sm:flex sm:flex-row sm:gap-x-4 sm:items-center font-semibold text-lg"
  >
    <a
      href="/"
      class="hover:bg-indigo-800 hover:text-white rounded-full py-2 px-4 transition duration-500 ease-in-out"
      >Home</a
    >
    <a
      href="/articles"
      class="hover:bg-indigo-800 hover:text-white rounded-full py-2 px-4 transition duration-500 ease-in-out"
      >Articles</a
    >
    <a
      href="/projects"
      class="hover:bg-indigo-800 hover:text-white rounded-full py-2 px-4 transition duration-500 ease-in-out"
      >Projects</a
    >
    <a
      href="/contact"
      class="hover:bg-indigo-800 hover:text-white rounded-full py-2 px-4 transition duration-500 ease-in-out"
      >Contact</a
    >
  </nav>
  <div class="grid place-items-center sm:hidden">
    <a href="#" class="cursor-pointer active:scale-95 transition">
      <Menu class="size-11 px-1" />
    </a>
  </div>
</header>

